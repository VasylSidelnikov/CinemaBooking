            First Name:
            <p>Customer.FirstN</p>
            <br />
            <label>Edit:</label>
            <br />
            <input asp-for="Customer.FirstN" style="color:red"/>
            <span asp-validation-for="Customer.FirstN" class="text-danger"/>
        </div>
