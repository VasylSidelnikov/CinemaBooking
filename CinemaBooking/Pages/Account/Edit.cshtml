@page
@model CinemaBooking.Pages.Customer_Edit_Model

<style>
    body{
        background-color: black;
    }
</style>
<form method="post">
    <div class="border p-3 mt-6">
        <div class="row pb-2">
            <h2 style="color:white">
                Account
            </h2>
            <hr />
        </div>
